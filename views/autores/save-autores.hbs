<div class="col-md-4">
    <div class="card" style="width: 18rem;">
        <div class="card-header bg-dark text-white">
             <h5 class="card-title text-center"> {{#if editMode}}Edicion{{else}}Creacion{{/if}} de autor</h5>
        </div>
        <div class="card-body">
            <form action="{{#if editMode}}/edit-autores{{else}}/create-autores{{/if}}" method="POST">
                <div>
                <label for="name">nombre</label>
                <input type="text" name="name" class="form-control" value="{{#if editMode}}{{Autor.name}}{{/if}}">
                </div>
                <div>
                    <label for="email">correo</label>
                    <input type="email" name="email" id="" class="form-control" value="{{#if editMode}}{{Autor.email}}{{/if}}">
                </div>
                 <br>
          {{#if editMode}}

          <input type="hidden" name="autorId" value="{{Autor.id}}">
          
          {{/if}}

                <button type="submit" class="btn btn-primary">guardar</button>
                <a href="/list-autores" class="btn btn-danger">cancelar</a>
            </form>

        </div>
    </div>
</div>
